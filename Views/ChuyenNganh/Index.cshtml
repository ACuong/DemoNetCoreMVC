@model IEnumerable<DemoDotNetMVC.Models.ChuyenNganh>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="ChuyenNganh" asp-action="Index">
    <p>
        Title: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ChuyenNganhName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Khoa)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ChuyenNganhName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Khoa.KhoaName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ChuyenNganhId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ChuyenNganhId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ChuyenNganhId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
