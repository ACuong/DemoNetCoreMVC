
@model DemoDotNetMVC.Models.ChuyenNganhKhoaVModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="ChuyenNganh" asp-action="Index" method="get">
    <p>

        <select asp-for="ChuyenSauIn" asp-items="Model.ChuyenSauList">
            <option value="">All</option>
        </select>

        Title: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ChuyenNganhs[0].ChuyenNganhName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChuyenNganhs[0].KhoaId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ChuyenNganhs) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ChuyenNganhName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KhoaId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ChuyenNganhId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ChuyenNganhId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ChuyenNganhId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>